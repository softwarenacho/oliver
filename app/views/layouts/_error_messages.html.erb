<% if object.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      La forma contiene <%= object.errors.count %>
      <%  if object.errors.count == 1 %>error<% else %>errores<%end%>
      <ul>
        <% object.errors.full_messages.each do |msg| %>
        <li> <%= msg %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>