<div class="row">
  <div class="col-md-4 col-md-offset-4 text-center">
    <div class="btn-group btn-group-justified" role="group" aria-label="...">
      <div class="btn-group" role="group">
        <%= link_to "Texto", post_path("txt"), class: "btn btn-lg btn-success", remote: true %>
      </div>
      <div class="btn-group" role="group">
        <%= link_to "Foto/Gif", post_path("img"), class: "btn btn-lg btn-warning", remote: true %>
      </div>
      <div class="btn-group" role="group">
        <%= link_to "Video", post_path("vid"), class: "btn btn-lg btn-primary", remote: true %>
      </div>
    </div>
  </div>
  <div id="post"></div>
</div>

<br><br><br>

<div class="row">
  <% @posts.each do |post| %>
    <br>
    <div class="col-md-12 text-center">
      <div class="thumbnail">
        <div class="caption">
          <h3>
            <%= post.title %>
          </h3>
          <% case post.kind %>
            <% when "txt" %>
              <%= render 'txt', content: post.content %>
            <% when "img" %>
              <%= render 'img', content: post.content %>
            <% when "vid" %>
              <%= render 'vid', content: post.content %>
          <% end %>
          <p>
            Publicado por <%= post.user.username %> ( <%= post.created_at.strftime("%d-%m-%Y %I:%M%p") %>)
          </p>
        </div>
      </div>
    </div>
    <br>
  <% end %>
</div>

<br><br><br><br>

<style type="text/css">
  h3, h4, p {
    color: black !important;
    text-shadow: none;
  }
</style>
